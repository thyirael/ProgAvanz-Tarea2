@model ProyAvanzWeb.Tarea2.Models.ServiciosXEdificio

@{
    ViewData["Title"] = "Eliminar un servicio de un edificio";
}
<div class="container">
<h1 class="mb-3 p-4 bg-info text-white rounded text-center">@ViewData["Title"]</h1>
</div>
<h3>¿Está seguro de eliminar el servicio?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEdificio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEdificio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreServicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreServicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCorte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCorte)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Consumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Consumo)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> <br /> <br />
        <a asp-action="Index">Regresar al listado</a>
    </form>
</div>
